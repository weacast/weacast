{
  "name": "@weacast/api",
  "description": "Weacast Microservice",
  "version": "2.1.3",
  "homepage": "https://github.com/weacast/weacast",
  "main": "src/main.js",
  "bin": "src/main.js",
  "type": "module",
  "keywords": [
    "weacast",
    "api",
    "microservices"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/weacast/weacast.git"
  },
  "author": {
    "name": "Weacast contributors",
    "url": "https://github.com/weacast"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/weacast/weacast/issues"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec npm run debug",
    "dev:replica": "nodemon --watch src --exec npm run debug:replica",
    "debug": "cross-env NODE_ENV=development node --inspect src/main.js",
    "debug:replica": "cross-env NODE_ENV=development node --inspect=localhost:9230 src/main.js",
    "prod": "cross-env NODE_ENV=production node src/main.js",
    "lint": "standard src/**/*.js test/**/*.js --fix",
    "mocha": "cross-env NODE_CONFIG_DIR=./test/config/ mocha --exit",
    "test": "npm run lint && npm run mocha",
    "start": "node src/main.js"
  },
  "standard": {
    "plugins": [
      "html"
    ],
    "sourceType": "module",
    "env": [
      "mocha"
    ]
  },
  "dependencies": {
    "@feathersjs/authentication": "^5.0.0-pre.28",
    "@feathersjs/authentication-local": "^5.0.0-pre.28",
    "@feathersjs/errors": "^5.0.0-pre.28",
    "@feathersjs/express": "^5.0.0-pre.28",
    "@kalisio/feathers-distributed": "^2.0.2",
    "@weacast/alert": "^2.1.3",
    "@weacast/arome": "^2.1.3",
    "@weacast/arpege": "^2.1.3",
    "@weacast/core": "^2.1.2",
    "@weacast/gfs": "^2.1.3",
    "@weacast/probe": "^2.1.3",
    "containerized": "^1.0.2",
    "feathers-hooks-common": "^3.5.0",
    "fs-extra": "^10.0.1",
    "http-proxy-middleware": "^2.0.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-lint": "^0.1.1",
    "colors": "^1.4.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-html": "^6.2.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "shx": "^0.3.4",
    "standard": "^16.0.4"
  }
}
