{
  "name": "weacast-alert",
  "description": "Alerting plugin for Weacast",
  "version": "1.0.0",
  "homepage": "https://github.com/weacast/weacast-alert",
  "main": "lib/",
  "keywords": [
    "weacast",
    "weacast-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/weacast/weacast-alert.git"
  },
  "author": {
    "name": "Weacast contributors",
    "url": "https://github.com/weacast"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/weacast/weacast-alert/issues"
  },
  "scripts": {
    "prepublish": "npm run compile",
    "publish": "git push origin --tags && npm run changelog && git push origin",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "changelog": "github_changelog_generator -u weacast -p weacast-alert && git add CHANGELOG.md && git commit -am \"Updating changelog\"",
    "compile": "shx rm -rf lib/ && babel -d lib/ src/ -s",
    "watch": "npm run compile && babel --watch -d lib/ src/",
    "lint": "standard src/**/*.js test/**/*.js --fix",
    "mocha": "cross-env NODE_CONFIG_DIR=./test/config/ mocha --opts mocha.opts",
    "coverage": "cross-env NODE_CONFIG_DIR=./test/config/ node node_modules/istanbul/lib/cli cover node_modules/mocha/bin/_mocha -- --opts mocha.opts",
    "test": "npm run compile && npm run lint && npm run coverage",
    "start": "npm run compile && node lib"
  },
  "standard": {
    "sourceType": "module",
    "env": [
      "mocha"
    ]
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "cron": "^1.4.1",
    "debug": "^3.1.0",
    "feathers-hooks-common": "^3.0.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "sift": "^8.5.0",
    "weacast-core": "^1.2.0",
    "weacast-probe": "^1.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^3.5.0",
    "chai-lint": "^0.1.1",
    "chai-spies": "^0.7.1",
    "containerized": "^1.0.2",
    "cross-env": "^4.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "shx": "^0.2.2",
    "standard": "^10.0.2",
    "weacast-gfs": "^1.2.0"
  }
}
