{
  "name": "weacast-core",
  "description": "Basic utils to support Weacast and plugins",
  "version": "1.5.0",
  "homepage": "https://github.com/weacast/weacast-core",
  "main": "lib/",
  "keywords": [
    "weacast",
    "weacast-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/weacast/weacast-core.git"
  },
  "author": {
    "name": "Weacast contributors",
    "url": "https://github.com/weacast"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/weacast/weacast-core/issues"
  },
  "scripts": {
    "prepublish": "npm run compile",
    "publish": "git push origin --tags && npm run changelog && git push origin",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "changelog": "github_changelog_generator -u weacast -p weacast-core && git add CHANGELOG.md && git commit -am \"Updating changelog\"",
    "compile": "shx rm -rf lib/ && babel -d lib/ src/ -s",
    "watch": "npm run compile && babel --watch -d lib/ src/",
    "lint": "standard src/**/*.js test/**/*.js --fix",
    "mocha": "cross-env NODE_CONFIG_DIR=./test/config/ mocha --exit --require babel-core/register",
    "coverage": "nyc npm run mocha",
    "test": "npm run compile && npm run lint && npm run coverage",
    "start": "npm run compile && node lib"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "html"
    ],
    "sourceType": "module",
    "env": [
      "mocha"
    ]
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@feathersjs/authentication": "^5.0.0-pre.16",
    "@feathersjs/authentication-local": "^5.0.0-pre.16",
    "@feathersjs/authentication-oauth": "^5.0.0-pre.16",
    "@feathersjs/client": "^5.0.0-pre.16",
    "@feathersjs/configuration": "^5.0.0-pre.16",
    "@feathersjs/errors": "^5.0.0-pre.16",
    "@feathersjs/express": "^5.0.0-pre.16",
    "@feathersjs/feathers": "^5.0.0-pre.16",
    "@feathersjs/socketio": "^5.0.0-pre.16",
    "chroma-js": "^2.4.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.3",
    "feathers-hooks-common": "^5.0.6",
    "feathers-mongodb": "^3.0.0",
    "fs-extra": "^10.0.0",
    "helmet": "^5.0.2",
    "loglevel": "^1.8.0",
    "moment": "^2.29.1",
    "mongodb": "^3.1.1",
    "request": "^2.81.0",
    "socket.io-client": "^4.4.1",
    "sublevelup": "^4.0.0",
    "winston": "^3.5.1",
    "winston-daily-rotate-file": "^4.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.6",
    "chai-lint": "^0.1.1",
    "containerized": "^1.0.2",
    "cross-env": "^7.0.3",
    "eslint-plugin-html": "^6.2.0",
    "nyc": "^15.1.0",
    "mocha": "^9.2.0",
    "nock": "^13.2.4",
    "shx": "^0.3.4",
    "standard": "^16.0.4"
  },
  "peerDependencies": {}
}
